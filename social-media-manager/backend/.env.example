# Application Settings
APP_ENV=development
APP_NAME=Dilithion Social Media Manager
DEBUG=true
LOG_LEVEL=INFO

# Security (GENERATE THESE - DO NOT USE EXAMPLES)
# Generate SECRET_KEY: openssl rand -hex 32
# Generate MASTER_ENCRYPTION_KEY: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# Generate BACKEND_API_KEY: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-generate-with-openssl
MASTER_ENCRYPTION_KEY=your-fernet-key-here-generate-with-python
BACKEND_API_KEY=your-api-key-here-generate-with-openssl

# Database
# Development (SQLite)
DATABASE_URL=sqlite:///./social_media_manager.db
# Production (PostgreSQL) - Uncomment and configure for production
# DATABASE_URL=postgresql://username:password@host:5432/database_name

# CORS (Comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================================================
# PLATFORM API CREDENTIALS
# See docs/setup-guide.md for instructions on obtaining these credentials
# ============================================================================

# Twitter API v2 Credentials
# Get these from: https://developer.twitter.com/en/portal/dashboard
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here

# Reddit API Credentials
# Get these from: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=dilithion-social-manager/1.0 (by /u/your_reddit_username)
REDDIT_USERNAME=your_reddit_username
REDDIT_PASSWORD=your_reddit_password

# GitHub API Credentials
# Get token from: https://github.com/settings/tokens
GITHUB_ACCESS_TOKEN=your_github_personal_access_token_here
GITHUB_REPO_NAME=WillBarton888/dilithion

# Claude AI API Credentials
# Get from: https://console.anthropic.com/
CLAUDE_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# ============================================================================
# MONITORING & TASK SETTINGS
# ============================================================================

# How often to fetch new mentions (minutes)
FETCH_INTERVAL_MINUTES=15

# Daily analytics snapshot time (hour in 24h format, UTC)
ANALYTICS_SNAPSHOT_HOUR=23

# How often to check for scheduled posts (minutes)
SCHEDULER_CHECK_INTERVAL_MINUTES=5

# ============================================================================
# RATE LIMITING
# ============================================================================

RATE_LIMIT_ENABLED=true

# Twitter rate limits (per 15-minute window)
TWITTER_SEARCH_RATE_LIMIT=450
TWITTER_POST_RATE_LIMIT=300

# Reddit rate limit (per minute)
REDDIT_RATE_LIMIT=60

# GitHub rate limit (per hour)
GITHUB_RATE_LIMIT=5000

# Claude API rate limit (per minute, tier-dependent)
CLAUDE_RATE_LIMIT=50

# ============================================================================
# CONTENT & FILTERING
# ============================================================================

# Keywords to monitor (comma-separated)
MONITOR_KEYWORDS=dilithion,@dilithioncrypto,post-quantum,quantum-resistant

# Subreddits to monitor (comma-separated)
MONITOR_SUBREDDITS=dilithion,cryptocurrency,cryptotechnology,quantumcomputing

# ============================================================================
# AI REPLY SETTINGS
# ============================================================================

# Minimum confidence score for AI suggestions (0.0-1.0)
MIN_AI_CONFIDENCE=0.7

# Maximum tokens for AI reply generation
AI_MAX_TOKENS=300

# Temperature for AI generation (0.0-1.0)
AI_TEMPERATURE=0.7

# ============================================================================
# ALERT SETTINGS
# ============================================================================

# Enable alert system
ALERTS_ENABLED=true

# Alert on negative sentiment
ALERT_ON_NEGATIVE_SENTIMENT=true

# Alert on high-priority mentions
ALERT_ON_HIGH_PRIORITY=true

# Alert on viral posts (minimum engagement threshold)
VIRAL_THRESHOLD=1000

# ============================================================================
# DATA RETENTION
# ============================================================================

# Days to keep processed mentions
MENTION_RETENTION_DAYS=90

# Days to keep analytics snapshots
ANALYTICS_RETENTION_DAYS=365

# Days to keep activity logs
ACTIVITY_LOG_RETENTION_DAYS=180

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Reload on code changes (development only)
RELOAD=true

# Show detailed error traces
SHOW_ERROR_TRACES=true

# Disable rate limiting for testing
# RATE_LIMIT_ENABLED=false
